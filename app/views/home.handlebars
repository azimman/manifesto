{{#each message}}
    <div class="confirmation">{{this}}</div>
{{/each}}

{{{html}}}

{{#unless user}}
<a href="/sign"><button class="button primary" id="sign_manifesto">Sign the Manifesto</button></a>
{{/unless}}


<div class="signers">
    <p>{{count}} people already signed</p>
    <ul class="avatars">
        {{#each profiles}}
            <li class="avatar" style="background-image: url('{{picture}}')" data-tooltip="{{displayName}} ({{ago}})"></li>
        {{/each}}
    </ul>
</div>

<div class="links">
    <ul>
        <li><a href="https://github.com/sdd-manifesto/manifesto">View on GitHub</a></li>
        <li><a href="https://github.com/sdd-manifesto/manifesto/blob/master/README.md">Suggest Improvements</a></li>
    </ul>
</div>


